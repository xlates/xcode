private Button.ClickListener onClickOpenTerminalForEdit(final LazyEntityContainer entityContainer,
                                                            final Grid entityGrid) {

        return new Button.ClickListener() {

            @Override
            public void buttonClick(final Button.ClickEvent event) {
                //Item contains Terminal in this case
                final Item item = entityContainer.getItem(entityGrid.getSelectedItemId());

                //We need the Navigator -component to open particular page
                AbstractSiteUI ui = ((AbstractSiteUI) UI.getCurrent());
                ui.getNavigator().navigateTo("merchants");

                //We also need the handle for the view in order to get the containing components
                DefaultView merchantsView = (DefaultView) getSite().getView(MposManagementUI.VIEW_NAME_MERCHANTS);

                //Then we need to find the MerchantManagement -flow
                for (Iterator it = merchantsView.iterator(); it.hasNext(); ) {
                    Object next = it.next();
                    if (next instanceof MerchantManagement) {
                        MerchantManagement merchantManagement = (MerchantManagement) next;
                        //Also find the particular flowlet
                        TerminalDetailsFlowlet flowlet = merchantManagement.get(TerminalDetailsFlowlet.class);
                        flowlet.isAddingTerminal(false);
                        flowlet.edit(item, entityContainer.getQueryView().getQueryDefinition(), false);
                        //And navigate there
                        merchantManagement.forward(TerminalDetailsFlowlet.class);
                        break;
                    }
                }
            }
        };
    }
